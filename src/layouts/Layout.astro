---
// En src/layouts/Layout.astro
import SmoothScroll from '../components/astro/SmoothScroll.astro';
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
}

const { 
  title = "Edinson Quispe - Desarrollador Full Stack", 
  description = "Portafolio profesional de Edinson Quispe - Desarrollador Full Stack",
  canonicalUrl 
} = Astro.props;

const fullCanonicalUrl = canonicalUrl ? `https://edinsonquispe.dev${canonicalUrl}` : 'https://edinsonquispe.dev';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Meta BÃ¡sicas -->
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="canonical" href={fullCanonicalUrl}>
    
    <!-- Open Graph -->
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:url" content={fullCanonicalUrl}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Edinson Quispe">
    <meta property="og:locale" content="es_ES">
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Edinson Quispe",
        "url": "https://edinsonquispe.dev",
        "jobTitle": "Desarrollador Full Stack",
        "description": "${description}",
        "sameAs": [
          "https://github.com/Mervoid",
          "https://linkedin.com/in/edinsonquispe"
        ]
      }
    </script>
  </head>
  <body>
    <div id="root">
      <slot />
    </div>
    
    <SmoothScroll />
  </body>
</html>